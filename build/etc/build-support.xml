    <assert name="javadoc.title"
            message="javadoc.title must be defined for common-javadoc to work."/>
    <assert name="private.javadoc.base.url"
            message="private.javadoc.base.url must be defined for common-javadoc to work."/>

    <!-- allow the package names for the javadoc source files to be overridden -->
    <if><not><isset property="javadoc.pkg.names"/></not><then>
