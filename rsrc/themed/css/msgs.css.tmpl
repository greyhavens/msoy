/**
 * CSS styles for the common Msgs components.
 */

.titledListPanel {
  width: 100%;
  border: 5px solid white;
}

.titledListPanel .Header {
  background: #3A86B7;
  color: #FFFFFF;
  width: 100%;
  border: 1px solid #3A86B7;
  font-size: 14px;
}

.titledListPanel .Header a {
  white-space: nowrap;
  color: #FFFFFF;
}

.titledListPanel .Header .Whirled {
  padding-left: 5px;
  width: 50px;
}

.titledListPanel .Header .RSS {
  padding-left: 5px;
  width: 16px;
}

.titledListPanel .Header .Title {
  padding: 5px;
  font-weight: bold;
}

.titledListPanel .Header .TitleBox {
  width: 280px;
  white-space: nowrap;
  overflow: hidden;
}

.titledListPanel .Header .Search {
  width: 105px;
  padding-right: 5px;
}

.titledListPanel .Header .Posts {
  width: 30px;
  font-size: 12px;
  text-align: right;
  vertical-align: bottom;
  padding-right: 20px;
}

.titledListPanel .Header .LastPost {
  width: 150px;
  font-size: 12px;
  vertical-align: bottom;
  white-space: nowrap;
}

.titledListPanel .Header .IgnoreThread {
  width: 19px;
}

.titledListPanel .Header .Back {
  padding-left: 5px;
  width: 15px;
}

.titledListPanel .Header .Filter {
  background: #888888;
  color: #FFFFFF;
  font-size: 12px;
  vertical-align: middle;
  white-space: nowrap;
  text-align: center;
}

.threadSummaryPanel {
  width: 100%;
}

.threadSummaryPanel .Status {
  width: 30px;
}

.threadSummaryPanel .Status img {
  margin-left: auto;
  margin-right: auto;
}

.threadSummaryPanel .Subject {
  max-width: 450px;
  overflow: hidden;
  white-space: nowrap;
}

.threadSummaryPanel .Subject .gwt-Image {
  vertical-align: middle;
  padding-right: 5px;
}

.threadSummaryPanel .Subject .GroupName a {
  font-size: 12px;
  color: #6692AF;
  text-decoration: none;
  padding-left: 5px;
}
.threadSummaryPanel .Subject .GroupName a:hover {
  text-decoration: underline;
}

.threadSummaryPanel .EditFlags {
  background-image: url(/images/msgs/edit_flags.png);
  width: 16px;
  height: 16px;
}

.threadSummaryPanel .Posts {
  width: 20px;
  text-align: right;
  padding-right: 20px;
}

.threadSummaryPanel .LPCell, .threadSummaryPanel .LastPost {
  width: 150px;
}

.threadSummaryPanel .LastPost {
  font-size: 12px;
  padding: 2px 0px;
  overflow: hidden;
  white-space: nowrap;
}

.threadSummaryPanel .IgnoreThread {
  width: 19px;
  text-align: left;
}

.threadSummaryPanel .IgnoreThread img {
  cursor: pointer;
}

.messageSummaryPanel {
  width: 100%;
}

.replyPanel {
  border-left: 1px solid #DADADA;
  border-right: 1px solid #DADADA;
  border-bottom: 1px solid #DADADA;
}

.replyPanel .Title {
  font-weight: bold;
}

.newThreadPanel .FlagTip {
  font-size: 12px;
}
