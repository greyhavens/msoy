/** 
 * CSS styles for the Help interfaces.
 */

.helpPanel, .helpPanel a {
  color: #2E729F;
  font-weight: normal;
  font-size: 14px;
  padding-top: 10px;
}

.helpPanel .helpIntro {
  background-image: url(/images/help/thankyoumsg.png);
  background-repeat: no-repeat;
  background-position: top center;
  height: 77px;
  color: white;
  padding: 10px 20px 0px 50px;
  text-indent: -30px;
}

.helpPanel .helpIntro h2 {
  display: inline;
  padding-right: 10px;
  font-weight: bold;
  font-size: 18pt;
}

.helpPanel .helpIntro a {
  color: white;
}

.helpPanel .roundBox ul {
  list-style-image: url(/images/help/bullet_star.png);
  margin-left: 0;
  padding-left: 20px;
}
.helpPanel .roundBox li {
  font-size: 10pt;
  margin-bottom: 10px;
}

.helpPanel .tongueBox .Content {
  padding-left: 30px;
}

.helpPanel .helpTeam h3 {
  margin-bottom: 5px;
}

.helpPanel .helpTeam table {
  padding-left: 30px;
  width: 400px;
  margin-bottom: 10px;
}
.helpPanel .helpTeam td {
  width: 50%;
}
