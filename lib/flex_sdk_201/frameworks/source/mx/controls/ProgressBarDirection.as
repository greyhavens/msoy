package mx.controls
{
	
/**
 *  The ProgressBarDirection class defines the values
 *  for the <code>direction</code> property of the ProgressBar class.
 *
 *  @see mx.controls.ProgressBar
 */
public final class ProgressBarDirection
{
	include "../core/Version.as";

	//--------------------------------------------------------------------------
	//
	//  Class constants
	//
	//--------------------------------------------------------------------------

	/**
	 *  Specifies to fill the progress bar from the right to the left.
	 */
	public static const LEFT:String = "left";
	
	/**
	 *  Specifies to fill the progress bar from the left to the right.
	 */
	public static const RIGHT:String = "right";
}

}
